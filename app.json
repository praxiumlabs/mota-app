{
  "expo": {
    "name": "MOTA",
    "slug": "mota-app",
    "version": "3.5.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#0A122A",
    "splash": {
      "backgroundColor": "#0A122A",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mota.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "MOTA uses Face ID for secure and convenient login."
      }
    },
    "android": {
      "package": "com.mota.app",
      "adaptiveIcon": {
        "backgroundColor": "#0A122A"
      },
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-secure-store"
    ]
  }
}